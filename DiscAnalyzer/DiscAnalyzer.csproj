    <Resource Include="Images\MenuIcons\percent-64.png">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Images\MenuIcons\refresh-32.png">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
