    <None Remove="Images\MenuIcons\count-64.png" />
    <None Remove="Images\MenuIcons\exit-32.png" />
    <None Remove="Images\MenuIcons\exit-64.png" />
    <None Remove="Images\MenuIcons\expand-32.png" />
    <None Remove="Images\MenuIcons\expand-64.png" />
    <None Remove="Images\MenuIcons\gb-32.png" />
    <None Remove="Images\MenuIcons\kb-32.png" />
    <None Remove="Images\MenuIcons\mb-32.png" />
    <None Remove="Images\MenuIcons\open-32.png" />
    <None Remove="Images\MenuIcons\open-64.png" />
    <None Remove="Images\MenuIcons\percent-32.png" />
    <None Remove="Images\MenuIcons\percent-64.png" />
    <None Remove="Images\MenuIcons\refresh-32.png" />
